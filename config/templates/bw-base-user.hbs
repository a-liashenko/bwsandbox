--bind {{SRC_XDG_RUNTIME_DIR}}/wayland-1       {{DST_XDG_RUNTIME_DIR}}/wayland-1
--bind {{SRC_XDG_RUNTIME_DIR}}/wayland-1.lock  {{DST_XDG_RUNTIME_DIR}}/wayland-1.lock
--bind {{SRC_XDG_RUNTIME_DIR}}/pipewire-0      {{DST_XDG_RUNTIME_DIR}}/pipewire-0
