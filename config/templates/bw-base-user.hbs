{{!-- # User base config files --}}
--ro-bind {{SRC_HOME}}/.config/helix      {{DST_HOME}}/.config/helix
--ro-bind {{SRC_HOME}}/.config/gtk-3.0    {{DST_HOME}}/.config/gtk-3.0
--ro-bind {{SRC_HOME}}/.config/gtk-4.0    {{DST_HOME}}/.config/gtk-4.0
--ro-bind {{SRC_HOME}}/.config/alacritty  {{DST_HOME}}/.config/alacritty
--ro-bind {{SRC_HOME}}/.config/fish       {{DST_HOME}}/.config/fish
--ro-bind {{SRC_HOME}}/.config/fontconfig {{DST_HOME}}/.config/fontconfig

--ro-bind {{SRC_HOME}}/.local/share/themes {{DST_HOME}}/.local/share/themes
--ro-bind {{SRC_HOME}}/.local/share/icons  {{DST_HOME}}/.local/share/icons

