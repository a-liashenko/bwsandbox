{# base options #}
--new-session
--die-with-parent
--unshare-all
--share-net
--cap-drop all

{# base system #}
{# TODO: Probably /sys can be restricted #}
--proc /proc
--ro-bind /sys /sys
--ro-bind /usr /usr
--symlink usr/lib /lib
--symlink usr/lib64 /lib64
--symlink usr/bin /bin
--symlink usr/sbin /sbin

--ro-bind /var/cache/fontconfig /var/cache/fontconfig

{# Minimal /etc environment #}
--ro-bind-try /etc/passwd /etc/passwd
--ro-bind-try /etc/group /etc/group
--ro-bind-try /etc/resolv.conf /etc/resolv.conf
--ro-bind-try /etc/hosts /etc/hosts
--ro-bind-try /etc/nsswitch.conf /etc/nsswitch.conf
--ro-bind-try /etc/localtime /etc/localtime
--ro-bind-try /etc/ssl /etc/ssl
--ro-bind-try /etc/ca-certificates /etc/ca-certificates
--ro-bind-try /etc/fonts /etc/fonts
--ro-bind-try /etc/gtk-2.0 /etc/gtk-2.0
--ro-bind-try /etc/gtk-3.0 /etc/gtk-3.0
--ro-bind-try /etc/xdg /etc/xdg
--ro-bind-try /etc/machine-id /etc/machine-id
--ro-bind-try /etc/os-release /etc/os-release
--ro-bind-try /etc/lsb-release /etc/lsb-release
--ro-bind-try /etc/mime.types /etc/mime.types
--ro-bind-try /etc/services /etc/services
--ro-bind-try /etc/host.conf /etc/host.conf
--ro-bind-try /etc/proxychains.conf /etc/proxychains.conf
--ro-bind-try /etc/alsa /etc/alsa

--ro-bind-try /usr/share/icons/ /usr/share/icons/
--ro-bind-try /usr/share/alsa /usr/share/alsa

{# Required by steam #}
--ro-bind /etc/ld.so.conf.d /etc/ld.so.conf.d
--ro-bind /etc/ld.so.conf /etc/ld.so.conf
--ro-bind /etc/ld.so.cache /etc/ld.so.cache

{# Extra apps #}
--ro-bind-try /etc/X11 /etc/X11
--ro-bind-try /etc/java-openjdk /etc/java-openjdk

{# Dev minimal #}
--dev /dev
--dev-bind /dev/net /dev/net
--dev-bind /dev/urandom /dev/urandom
--dev-bind /dev/null /dev/null
--dev-bind /dev/shm /dev/shm
--dev-bind /dev/snd /dev/snd

{# GPU related devices #}
--dev-bind-try /dev/dri /dev/dri
--dev-bind-try /dev/kfd /dev/kfd

{# Proton ntsync #}
--dev-bind-try /dev/ntsync /dev/ntsync